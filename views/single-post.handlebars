<!-- single post -->
<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{title}}</h2>
      <div>
        Posted by {{user.username}} on {{format_date date_created}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>

<!-- add comment -->
  {{!-- {{#if post.Comments}} --}}
    {{#if Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>
      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{user.username}}, {{format_date date_created}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

{{! Path: public/js/comment.js }}
<script src="/js/comment.js"></script>